{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "gcc",
            "args": [
                "-Wall", "-Wextra", "-Wpedantic", "-Wshadow", "-Wformat=2",
                "-Wcast-align", "-Wconversion", "-Wsign-conversion", "-Wnull-dereference",
                "-g3", "-O0",
                "basicClassification.c", "advancedClassificationRecursion.c", "advancedClassificationLoop.c", "main.c",
                "-o", "./build/Debug/outDebug"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}
